<% if notice %>
    <p id = "notice"><%=  notice %></p>
<% end %>
<h1>3D or Not 3D.com</h1>

<div id="main">
  <% @products.each do |product| %>
      <div class ="entry">
        <b><%= product.title %></b><br />
        <%= image_tag(product.image_url) %> <br />
        <%=number_to_currency (product.buy_price) %><%= button_to 'Trade for Credit', line_items_path(product_id: product) %>


      </div>
      </div>

<% end %>


