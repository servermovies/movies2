
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h2>3D or Not 3D</h2>
<div class="cart_title"></div>
    <table>
      <%= render @cart %>





 <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>





<ul>
  <% @cart.credit_items.each do | credit | %>
      <li><%= credit.quantity %> &times; <%= credit.product.title %></li>
  <% end %>
</ul>

<table>

<tr class="Credit Available">
  <td colspan="2">Total Credit</td>
  <td class="total_cell"><%= number_to_currency(@cart.total_credit) %></td>
</tr>
</table>

<%= button_to 'Apply credit', @cart, method: :post, confirm: 'Are you sure ?' %>
